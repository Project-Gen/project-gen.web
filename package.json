{
  "name": "project-gen.web",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 10,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      },
      "project": "./tsconfig.json"
    },
    "env": {
      "jest": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "airbnb-typescript"
    ],
    "rules": {
      "@typescript-eslint/indent": 0,
      "@typescript-eslint/no-unused-vars": 1,
      "@typescript-eslint/semi": [
        2,
        "never"
      ],
      "semi": [
        2,
        "never"
      ],
      "object-curly-newline": 0,
      "no-console": 0,
      "import/prefer-default-export": 0,
      "max-classes-pre-file": 0,
      "max-classes-per-file": 0,
      "import/no-cycle": 0,
      "class-methods-use-this": 0,
      "quotes": [
        2,
        "single"
      ],
      "max-len": [
        2,
        {
          "code": 150,
          "tabWidth": 2
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 150,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.ts?(x)": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{js,css,md}": "prettier --write"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "next": "^11.1.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.19",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-plugin-import": "^2.20.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  }
}
